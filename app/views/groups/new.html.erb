<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-6 col-md-8 mb-2 mx-auto">
            <h2>下はタブにする</h2>
            <a href="/groups/index">
                <button>参加グループ</button>
            </a>
            <a href="/groups/search">
                <button>グループ検索</button>
            </a>
            <a href="/groups/new">
                <button>グループ作成</button>
            </a>
            <%= form_tag("/groups/create") do %>
                <div class="form-row floating-label textfield-box">
                    <div class="col-lg-6 col-lg-6 col-md-8 mb-2 mr-auto mt-2">
                        <label>グループ名</label>
                        <input type="text" class="form-control" name="group_name" value="<%= @name %>" required>
                        <button class="btn btn-light mt-3" type="submit">作成する</button>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>