<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-6 col-md-8 mb-2 mx-auto">
            <h2>下はタブにする</h2>
            <a href="/groups/index">
                <button>参加グループ</button>
            </a>
            <a href="/groups/search">
                <button>グループ検索</button>
            </a>
            <a href="/groups/new">
                <button>グループ作成</button>
            </a>
            <%= form_tag("/groups/search", class: "form-inline my-2 my-lg-0 floating-label") do %>
                <label>グループ名</label>
                <input class="form-control mr-sm-2" type="search" name="search" aria-label="Search">
                <button class="btn btn-light my-2 my-sm-0" type="submit">検索する </button>
            <% end %>
            <% @results.each do |result| %>
                <%= result.group_name %>
                <br>
            <% end %>
        </div>
    </div>
</div>