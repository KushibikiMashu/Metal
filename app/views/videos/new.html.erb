<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-6 col-md-8 mb-2 mx-auto">
            <div class="videos-new">
                <h2>動画を投稿しよう！</h2>
                <%= form_tag('/videos/create', {multipart: true}) do %>
                    <div class="row">
                        <div class="mt-3 mb-3">
                            <div class="input-group">
                                <label class="input-group-btn">
                                    <span class="btn btn-info">
            動画を選択<input type="file" name="video" style="display:none">
        </span>
                                </label>
                                <input type="text" class="form-control" readonly="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-3 mb-3">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">グループ名</label>
                                </div>
                                <select name="group_name" class="custom-select">
                                    <option selected>未選択</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-3 mb-3">
                            <button class="btn btn-light" type="submit">投稿する</button>
                        </div>
                    </div>
                    <% end %>
            </div>
        </div>
    </div>
</div>
