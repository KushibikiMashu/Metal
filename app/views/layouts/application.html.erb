<!DOCTYPE html>
<html>

<head>
    <title>Groupy</title>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
            <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
                <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
                    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body style="padding-top: 3.5rem">
    <nav class="navbar navbar-expand-sm navbar-light bg-light navbar-default fixed-top">
        <div class="container col-lg-6 col-md-8">
            <a class="navbar-brand" href="/">Groupy</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- ログイン前 -->
                <% if !@current_user %>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/about">about</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/new">新規登録</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login_form">ログイン</a>
                        </li>
                    </ul>
                    <!-- ログイン後 -->
                    <% else %>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/index" style="padding-top: 6px;">
                                    <i class="material-icons" style="font-size:30px">home</i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/videos/new" style="padding-top: 6px;">
                                    <i class="material-icons" style="font-size:30px">videocam</i>
                                </a>
                            </li>
                            <li class="nav-item" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <a class="nav-link" style="padding-top: 6px;">
                                    <i class="material-icons" style="font-size:30px">account_circle</i>
                                </a>
                            </li>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="/groups">グループ</a>
                                <a class="dropdown-item" href="#">申請</a>
                                <div class="dropdown-divider"></div>
                                <button class="dropdown-item" type="button">設定</button>
                                <a class="dropdown-item" href="/logout" data-method="post">ログアウト</a>
                            </div>
                        </ul>
                        <% end %>
            </div>
        </div>
    </nav>
    <!-- メッセージ -->
    <% if flash[:notice] %>
        <div class="flash">
            <%= flash[:notice] %>
        </div>
        <% end %>
            <!-- エラーメッセージ -->
            <% if @error_message %>
                <div class="form-error">
                    <%= @error_message %>
                </div>
                <% end %>
                    <div class="space" style="margin-top: 20px"></div>
                    <%= yield %>
</body>

</html>