 <!DOCTYPE html>
 <html>
   <head>
     <title>Share Movies</title>
     <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   </head>
 
   <body>
     <header>
       <div class="container" id="nav-bar">
         <div class="header-left">
           <%= link_to('Share Movies', '/') %>
         </div>
         <div class="header-right">
           <ul>
            <!-- ログイン前 -->
             <li>
               <%= link_to("about", "/about") %>
             </li>
             <li>
               <%= link_to("新規登録", "/new") %>
             </li>

            <!-- ログイン状態 -->
             <li>
               <%= link_to("ログイン", "/login_form") %>
             </li>
             <li>
               <%= link_to("ログアウト", "/logout", {method: :post}) %>
             </li>
             <li>
               <%= link_to("ホーム", "/index") %>
             </li>
             <li>
               <%= link_to('投稿', '/videos/new') %>
             </li>
           </ul>
         </div>
       </div>
     </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
     
     <%= yield %>
 
   </body>
 </html>
 