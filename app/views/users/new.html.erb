<div class="container">
    <div class="form-row">
        <div class="col-md-8 mb-2 mx-auto">
            <h3>Share Moviesに登録する</h3>
        </div>
    </div>

    <%= form_tag("/users/create") do %>
        <div class="form-row">
            <div class="col-md-8 mb-2 mx-auto mt-2">
                <label for="validationDefault01">User Name</label>
                <input type="text" class="form-control" id="validationDefault01" name="user_name" placeholder="" value="<%= @user_name %>" style="background-color: rgb(250, 255, 189)" required>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-8 mb-2 mx-auto mt-2">
                <label for="validationDefault02">Email</label>
                <input type="text" class="form-control" id="validationDefault02" name="email" placeholder="" value="<%= @email %>" style="background-color: rgb(250, 255, 189)" required>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-8 mb-2 mx-auto mt-2">
                <label for="validationDefault03">Password</label>
                <input type="password" class="form-control" id="validationDefault03" name="password" placeholder="" style="background-color: rgb(250, 255, 189)" required>
            </div>
        </div>
        <!--         <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                <label class="form-check-label">
                    <a href="#">利用規約</a>に同意する
                </label>
            </div>
        </div> -->
        <div class="form-row">
            <div class="col-md-8 mb-2 mt-2 mx-auto">
                <button class="btn btn-light ml-auto" type="submit">登録する</button>
            </div>
        </div>
    <% end %>
</div>