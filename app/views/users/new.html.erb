<div class="container">
    <div class="form-row">
        <div class="col-lg-6 col-lg-6 col-md-8 mb-2 mx-auto">
            <h3>Share Moviesに登録する</h3>
        </div>
    </div>
    <%= form_tag("/users/create") do %>
        <div class="form-group">
            <div class="col-lg-6 col-md-8 mb-2 mx-auto mt-2 floating-label" style="background-color: rgb(250, 255, 189) !important; padding-left: 0; padding-right: 0;">
                <label>User Name</label>
                <input type="text" class="form-control" name="user_name" placeholder="" value="<%= @user_name %>" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-md-8 mb-2 mx-auto mt-2 floating-label" style="background-color: rgb(250, 255, 189) !important; padding-left: 0; padding-right: 0;">
                <label>Email</label>
                <input type="text" class="form-control" name="email" placeholder="" value="<%= @email %>" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-md-8 mb-2 mx-auto mt-2 floating-label" style="background-color: rgb(250, 255, 189) !important; padding-left: 0; padding-right: 0;">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="" required>
            </div>
        </div>
        <!--         <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                <label class="form-check-label">
                    <a href="#">利用規約</a>に同意する
                </label>
            </div>
        </div> -->
        <div class="form-row">
            <div class="col-lg-6 col-lg-6 col-md-8 mb-2  mt-2 mx-auto">
                <button class="btn btn-light ml-auto" type="submit">登録する</button>
            </div>
        </div>
        <% end %>
</div>